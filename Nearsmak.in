<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Near Smoke Shop Finder</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
  body { font-family: 'Arial', sans-serif; background: #f5f5f5; color: #333; }
  .header { background: #1a1a1a; color: #fff; padding: 30px 20px; text-align: center; }
  .header h1 { margin-bottom: 10px; }
  .shop-card { background: #fff; border-radius: 10px; padding: 15px; margin-bottom: 15px; box-shadow: 0px 2px 8px rgba(0,0,0,0.1); }
  .shop-card img { width: 100%; border-radius: 10px; height: 180px; object-fit: cover; }
  .btn-find { background: #ff4d4d; color: #fff; border: none; }
  .btn-find:hover { background: #e60000; }
  footer { text-align: center; padding: 15px 0; margin-top: 20px; background: #1a1a1a; color: #fff; }
  #map { height: 400px; width: 100%; margin-bottom: 20px; border-radius:10px; }
</style>
</head>
<body>

<div class="header">
  <h1>Near Smoke Shop Finder</h1>
  <p>Find nearby cigarette & smoke shops instantly</p>
  <button class="btn btn-find" onclick="getLocation()">Find Near Me</button>
  <p class="mt-2"><strong>⚠️ 18+ only. We do not sell cigarettes.</strong></p>
</div>

<div class="container mt-4">
  <div class="row mb-3">
    <div class="col-md-6">
      <input type="text" id="city-search" class="form-control" placeholder="Enter city or pincode">
    </div>
    <div class="col-md-4">
      <select id="shop-type" class="form-select">
        <option value="">All Types</option>
        <option value="Cigarette">Cigarette</option>
        <option value="Hookah">Hookah</option>
        <option value="Vape">Vape</option>
      </select>
    </div>
    <div class="col-md-2">
      <button class="btn btn-find w-100" onclick="filterShops()">Search</button>
    </div>
  </div>

  <div id="map"></div>

  <h3>Nearby Smoke Shops</h3>
  <div id="shop-list"></div>

  <hr>
  <h3>Add Your Shop</h3>
  <form id="add-shop-form">
    <div class="mb-2">
      <input type="text" id="shop-name" class="form-control" placeholder="Shop Name" required>
    </div>
    <div class="mb-2">
      <input type="text" id="shop-address" class="form-control" placeholder="Address" required>
    </div>
    <div class="mb-2">
      <input type="text" id="shop-type-input" class="form-control" placeholder="Type (Cigarette/Hookah/Vape)" required>
    </div>
    <div class="mb-2">
      <input type="text" id="shop-lat" class="form-control" placeholder="Latitude" required>
    </div>
    <div class="mb-2">
      <input type="text" id="shop-lng" class="form-control" placeholder="Longitude" required>
    </div>
    <button type="submit" class="btn btn-find w-100">Add Shop</button>
  </form>
</div>

<footer>
  &copy; 2025 Near Smoke Finder | Disclaimer: 18+ only
</footer>

<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY"></script>
<script>
let shops = [
  {name: "Smoke World", lat: 28.6139, lng: 77.2090, img: "https://i.ibb.co/9nF6t2B/smoke1.jpg", address: "Delhi, India", type: "Cigarette"},
  {name: "Cigarette Hub", lat: 28.7041, lng: 77.1025, img: "https://i.ibb.co/5r0qMZq/smoke2.jpg", address: "Delhi, India", type: "Hookah"},
  {name: "Hookah Point", lat: 28.5355, lng: 77.3910, img: "https://i.ibb.co/xXx7g0m/smoke3.jpg", address: "Noida, India", type: "Hookah"}
];

let map;
let markers = [];

function initMap() {
  map = new google.maps.Map(document.getElementById("map"), {
    center: { lat: 28.6139, lng: 77.2090 },
    zoom: 10
  });
  showShopsOnMap(shops);
}

function showShopsOnMap(shopArray) {
  markers.forEach(marker => marker.setMap(null));
  markers = [];
  shopArray.forEach(shop => {
    let marker = new google.maps.Marker({
      position: {lat: shop.lat, lng: shop.lng},
      map: map,
      title: shop.name
    });
    let infoWindow = new google.maps.InfoWindow({
      content: `<strong>${shop.name}</strong><br>${shop.address}<br>Type: ${shop.type}`
    });
    marker.addListener("click", () => infoWindow.open(map, marker));
    markers.push(marker);
  });
}

function getDistance(lat1, lon1, lat2, lon2) {
  const R = 6371;
  const dLat = (lat2-lat1) * Math.PI / 180;
  const dLon = (lon2-lon1) * Math.PI / 180;
  const a = 0.5 - Math.cos(dLat)/2 + 
    Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) * 
    (1 - Math.cos(dLon))/2;
  return R * 2 * Math.asin(Math.sqrt(a));
}

function getLocation() {
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(showShops, () => alert("Location access denied!"));
  } else {
    alert("Geolocation not supported.");
  }
}

function showShops(position) {
  const userLat = position.coords.latitude;
  const userLng = position.coords.longitude;
  let container = document.getElementById("shop-list");
  container.innerHTML = "";

  shops.forEach(shop => {
    let distance = getDistance(userLat, userLng, shop.lat, shop.lng).toFixed(2);
    container.innerHTML += `
      <div class="shop-card">
        <img src="${shop.img}" alt="${shop.name}">
        <h4 class="mt-2">${shop.name}</h4>
        <p>${shop.address}</p>
        <p><strong>Type:</strong> ${shop.type}</p>
        <p><strong>Distance:</strong> ${distance} km</p>
        <a href="https://www.google.com/maps/dir/?api=1&destination=${shop.lat},${shop.lng}" target="_blank" class="btn btn-sm btn-find">Get Directions</a>
      </div>
    `;
  });
  showShopsOnMap(shops);
}

function filterShops() {
  let city = document.getElementById("city-search").value.toLowerCase();
  let type = document.getElementById("shop-type").value;
  let filtered = shops.filter(shop => {
    let matchCity = shop.address.toLowerCase().includes(city);
    let matchType = type ? shop.type === type : true;
    return matchCity && matchType;
  });
  showShopsFiltered(filtered);
}

function showShopsFiltered(filtered) {
  let container = document.getElementById("shop-list");
  container.innerHTML = "";
  filtered.forEach(shop => {
    container.innerHTML += `
      <div class="shop-card">
        <img src="${shop.img}" alt="${shop.name}">
        <h4 class="mt-2">${shop.name}</h4>
        <p>${shop.address}</p>
        <p><strong>Type:</strong> ${shop.type}</p>
        <a href="https://www.google.com/maps/dir/?api=1&destination=${shop.lat},${shop.lng}" target="_blank" class="btn btn-sm btn-find">Get Directions</a>
      </div>
    `;
  });
  showShopsOnMap(filtered);
}

// Add local partner shop
document.getElementById("add-shop-form").addEventListener("submit", function(e){
  e.preventDefault();
  let newShop = {
    name: document.getElementById("shop-name").value,
    address: document.getElementById("shop-address").value,
    type: document.getElementById("shop-type-input").value,
    lat: parseFloat(document.getElementById("shop-lat").value),
    lng: parseFloat(document.getElementById("shop-lng").value),
    img: "https://i.ibb.co/9nF6t2B/smoke1.jpg"
  };
  shops.push(newShop);
  alert("Shop added successfully!");
  document.getElementById("add-shop-form").reset();
  showShopsOnMap(shops);
});

window.onload = initMap;
</script>

</body>
</html>
